<div class="modal full" id="community_invite_module">
    <div class="row">
        <div class="col s12 modal-content">
            <h4>Invitation</h4>
            <div class="row hide" id="community_invite-error-block">
                <div class="col s12" >
                    <div class="card-panel error" id="community_invite-error-message">
                    </div>
                </div>
            </div>
            <div class="row hide" id="community_invite-success-block">
                <div class="col s12" >
                    <div class="card-panel success" id="community_invite-success-message">
                        Your invitation will be sent shortly to <span id="iname"></span> at <span id="iemail"></span>.
                    </div>
                </div>
            </div>
            <form>
                <div class="row">
                    <div class="input-field col s12">
                        <input name="firstName" placeholder="" type="text" class="validate community-invite-focus" />
                        <label for="firstName">First name <span class="required">*</span></label>
                    </div>
                    <div class="input-field col s12">
                        <input name="lastName" placeholder="" type="text" class="validate" />
                        <label for="lastName">Last name</label>
                    </div>
                    <div class="input-field col s12">
                        <input name="email" placeholder="" type="email" class="validate" />
                        <label for="email">Email <span class="required">*</span></label>
                    </div>
                    <input name="event" type="hidden" value="{% if eventId is defined %}{{ eventId }}{% endif %}" />
                    <button class="btn waves-effect waves-light" type="submit" name="action">Invite
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>