{% extends 'main_layout.html.twig' %}
{% set pageType = "dashboard" %}

{% block title %}My dashboard{% endblock %}

{% set navClass ="nav-extended" %}
{% block logguedNavbar %}
    <span class="right"><a href="#community_invite_module" class="modal-trigger top-nav-invite-icon"><i class="fa fa-user-plus material-fa fa-fw" aria-hidden="true"></i></a> <a href="{{ path('create_event') }}"><i class="fa fa-fw fa-calendar-plus-o material-fa" aria-hidden="true"></i></a></span>
{% endblock %}
{% block navContent %}
    <div class="nav-content container">
        <ul class="tabs tabs-transparent" id=connections-tabs">
            <li class="tab"><a href="#upcoming">Upcoming</a></li>
            <li class="tab"><a href="#past">Past</a></li>
            <li class="tab"><a href="#pendingInvitation">Pending invitations</a></li>
        </ul>
    </div>
{% endblock %}

{%  block mainContent %}
    <span id="upcoming"></span>
    <span id="past"></span>
    <span id="pendingInvitation"></span>
    <div class="section no-pad-bot">
        <div class="container">
            <div class="row">
                <div class="col s12">
                <div class="row">
                    <div class="col s12" id="events-list">

                    </div>
                </div>
                </div>

            </div>
        </div>
    </div>
    <div class="hide" id="not-registered-to-events-template">
        <p>
        <a href="{{ path('show_events') }}" class="btn">See all upcoming events</a>
        </p>
        <p>
        or <a href="{{ path('create_event') }}">Propose an event</a>
        </p>

    </div>
    <div class="hide" id="past-event-template">
        <li class="collection-item" data-href="">

            <p><span class="title"></span></p>

            <i class="fa fa-fw fa fa-calendar" aria-hidden="true"></i> <span class="date"></span>
            <i class="fa fa-fw fa fa-clock-o" aria-hidden="true"></i><span class="time"></span><br />
            <span class="time"><time class="timeago"></time></span>

        </li>
    </div>
    <div class="hide" id="upcoming-event-template">
        <li class="collection-item" data-href="">

            <p><span class="title"></span></p>

            <i class="fa fa-fw fa fa-calendar" aria-hidden="true"></i> <span class="date"></span>
            <i class="fa fa-fw fa fa-clock-o" aria-hidden="true"></i><span class="time"></span><br />
            <span class="time"><time class="timeago"></time></span>

        </li>
    </div>
    {% include "registration/community_invite.html.twig" %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts
    'js/dashboard.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}