{% extends 'main_layout.html.twig' %}

{% block title %}Reset password{% endblock %}
{%  block mainContent %}
    <div class="section no-pad-bot">
        <div class="container">
            <div class="row">
                <div class="col s12">
                    <h1>Forgot your password ?</h1>
                </div>
            </div>
            <div class="row hide" id="password-reset-error-block">
                <div class="col s12" >
                    <div class="card-panel error" id="password-reset-error-message">
                    </div>
                </div>
            </div>
            <div class="row no-margin-bot">
                <form class="col s12" method="POST" id="password-reset">
                    <div class="input-field col s12">
                        <input id="plainPassword" name="plainPassword" placeholder="" type="password" class="validate">
                        <label for="plainPassword">Password</label>
                    </div>
                    <div class="input-field col s12">
                        <input name="repeatPassword" type="password" placeholder="" class="validate">
                        <label for="repeatPassword">Repeat password</label>
                    </div>
                    <button class="btn waves-effect waves-light s12 col" type="submit" name="action">Change my password
                        <i class="material-icons right">send</i>
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {% javascripts
    'js/password_reset.js'
    'js/countries.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
        var PASSWORD_SUCCESSFULLY_CHANGED_URL = '/login?password_modified=1';
    </script>
{% endblock %}